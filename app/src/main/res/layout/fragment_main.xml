<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.app.MainActivity$PlaceholderFragment"
    android:background="#000">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BILD JÄVEL"
        android:id="@+id/button"
        android:background="#FFF"
        android:textColor="#000"
        android:layout_marginBottom="33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="EN HELT VANLIG JÄVLA KAKA"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="Ingredienser:\nEtt ägghelvete\n1 dl sur kakao\nSå lite smör som möjligt\nSocker\nIngen jävla mandel i alla fall\n2 dl bakpulver\n1 pkt fula russin\n1,5 dl allerginötter\n\nFyllning:\n1 dl tradigt vanillinsocker\n1 melon eller nåt\nSprit\n\nGör så här:\nHäll I nästan allt I en bunmkjävel och kör med elvispen I en kvart. Grädda direkt I skålen. Skit I att smöra och bröa, kakhelvetet fastnar ändå. Dunka ut skiten på matbordet om du kan. Garnera med krossad melon och sprit. Det spelar ingen roll. Skit I det då. Dra åt helvete!!!"
        android:textColor="#FFF"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
